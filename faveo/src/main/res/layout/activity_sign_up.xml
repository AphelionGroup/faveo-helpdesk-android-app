<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:fillViewport="true">

    <LinearLayout
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:orientation="vertical"
        tools:context="co.helpdesk.faveo.frontend.activities.SignUpActivity">

        <ImageView
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:src="@drawable/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="FULL NAME"
            android:textStyle="bold"
            android:alpha="0.3"/>

        <EditText
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_full_name"
            android:background="@drawable/edittext_modified_states"
            android:textSize="14sp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/textView_error_full_name"
            android:layout_gravity="end"
            android:textColor="@color/error_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp" />

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="EMAIL"
            android:textStyle="bold"
            android:alpha="0.3"/>

        <EditText
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_email"
            android:background="@drawable/edittext_modified_states"
            android:textSize="14sp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress" />


        <TextView
            android:id="@+id/textView_error_email"
            android:layout_gravity="end"
            android:textColor="@color/error_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp" />

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="PASSWORD"
            android:textStyle="bold"
            android:alpha="0.3"/>

        <EditText
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_password"
            android:background="@drawable/edittext_modified_states"
            android:textSize="14sp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:inputType="textPassword" />


        <TextView
            android:id="@+id/textView_error_password"
            android:layout_gravity="end"
            android:textColor="@color/error_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp" />

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="BIRTHDAY"
            android:textStyle="bold"
            android:alpha="0.3"/>

        <EditText
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_birthday"
            android:background="@drawable/edittext_modified_states"
            android:textSize="14sp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress" />


        <TextView
            android:id="@+id/textView_error_birthday"
            android:layout_gravity="end"
            android:textColor="@color/error_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button_sign_up"
            android:textAllCaps="false"
            android:layout_margin="32dp"
            android:background="@color/blue_300"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"/>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="ALREADY HAVE AN ACCOUNT?"
                android:textStyle="bold"
                android:alpha="0.3"/>

            <TextView
                android:id="@+id/textView_sign_in"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text=" SIGN IN"
                android:textStyle="bold"
                android:alpha="0.6"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>